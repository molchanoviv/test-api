{% extends "::base.html.twig" %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <form class="form-horizontal" action="{{ path("fos_user_security_check") }}" method="post">
                    <div class="form-group">
                        <label for="username" class="col-sm-3 control-label">{{ 'form.email'|trans({}, 'FOSUserBundle') }}</label>

                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="password" class="col-sm-3 control-label">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>

                        <div class="col-sm-9">
                            <input type="password" class="form-control" id="password" name="_password"/>
                            <a href="{{ path("fos_user_resetting_check_email") }}">{% trans %}Reset password{% endtrans %}</a>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-9">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" id="remember_me" name="_remember_me" checked/>
                                    {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-9">
                            <button type="submit" id="_submit" name="_submit" class="btn btn-default">
                                {{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}
                            </button>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock content %}
