<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request form-horizontal">
    <div class="form-group">
        {% if invalid_username is defined %}
            <p>{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}, 'FOSUserBundle') }}</p>
        {% endif %}
        <label for="username" class="col-sm-3 control-label">{{ 'resetting.request.username'|trans({}, 'FOSUserBundle') }}</label>
        <div class="col-sm-9">
            <input type="text" class="form-control" id="username" name="username" required="required"/>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-9">
            <button type="submit" class="btn btn-default">
                {{ 'resetting.request.submit'|trans({}, 'FOSUserBundle') }}
            </button>
        </div>
    </div>
</form>
