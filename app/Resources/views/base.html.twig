{% extends 'MopaBootstrapBundle::base.html.twig' %}
{% from 'MopaBootstrapBundle::flash.html.twig' import session_flash %}

{% block title %}
    Api Admin
{% endblock %}

{% block head_style %}
    <link rel="stylesheet"
          href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.2/themes/smoothness/jquery-ui.css"/>
    <link rel="stylesheet" href="{{ asset('bundles/mopabootstrap/bootstrap/dist/css/bootstrap.min.css') }}"/>
    <link rel="stylesheet" href="{{ asset('bundles/mopabootstrap/bootstrap/dist/css/bootstrap-theme.min.css') }}"/>
    <link rel="stylesheet" href="{{ asset('assets/vendor/select2/dist/css/select2.min.css') }}"/>
    <style type="text/css">
        body {
            min-height: 2000px;
        }

        .navbar-static-top {
            margin-bottom: 19px;
        }
    </style>
{% endblock head_style %}

{% block head_script %}
    <script type="application/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script type="application/javascript"
            src="//ajax.googleapis.com/ajax/libs/jqueryui/1.11.2/jquery-ui.min.js"></script>
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
{% endblock head_script %}

{% block body %}
    {% block menu_navbar %}
        <nav class="navbar navbar-default navbar-static-top">
            <div class="container">
                {% block menu_navbar_content %}
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                                data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand main-navbar-brand" href="{{ url('app_city_list') }}">Dashboard</a>
                    </div>
                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav">
                            {% block menu %}{% endblock menu %}
                        </ul>
                    </div>
                {% endblock menu_navbar_content %}
            </div>
        </nav>
    {% endblock menu_navbar %}
    <div class="container">
        <div class="jumbotron">
            {% block flashes %}
                {% if app.session.flashbag.peekAll|length > 0 %}
                    <div class="row">
                        <div class="col-sm-12">
                            {{ session_flash(true) }}
                        </div>
                    </div>
                {% endif %}
            {% endblock flashes %}
            {% block content %}{% endblock content %}
        </div>
    </div>
    {% block confirmation_dialog %}
        <div class="modal fade bb-modal" id="confirmation-dialog" tabindex="-1" role="dialog" aria-labelledby="modal-title"
             aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal"
                                aria-label="{% trans %}Close{% endtrans %}">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h4 class="modal-title">
                            {% trans %}Confirmation Dialog{% endtrans %}
                        </h4>
                    </div>
                    <div class="modal-body">
                        {% trans %}Do you confirm the action?{% endtrans %}
                    </div>
                    <div class="modal-footer">
                        <a type="button" class="btn btn-default yes-button">
                            {% trans %}Yes{% endtrans %}
                        </a>
                        <a type="button" class="btn btn-default no-button" data-dismiss="modal">
                            {% trans %}No{% endtrans %}
                        </a>
                    </div>
                </div>
            </div>
        </div>
    {% endblock confirmation_dialog %}
    {{ block('foot_script') }}
{% endblock body %}

{% block foot_script %}
    <script src="{{ asset('bundles/mopabootstrap/bootstrap/js/transition.js') }}"></script>
    <script src="{{ asset('bundles/mopabootstrap/bootstrap/js/tooltip.js') }}"></script>
    <script src="{{ asset('bundles/mopabootstrap/bootstrap/js/popover.js') }}"></script>
    <script src="{{ asset('bundles/mopabootstrap/bootstrap/js/modal.js') }}"></script>
    <script src="{{ asset('bundles/mopabootstrap/bootstrap/js/tab.js') }}"></script>
    <script src="{{ asset('bundles/mopabootstrap/bootstrap/js/dropdown.js') }}"></script>
    <script src="{{ asset('bundles/mopabootstrap/js/mopabootstrap-collection.js') }}"></script>
    <script src="{{ asset('bundles/mopabootstrap/js/mopabootstrap-subnav.js') }}"></script>
    <script src="{{ asset('assets/vendor/select2/dist/js/select2.full.min.js') }}"></script>
    <script src="{{ asset('bundles/tetranzselect2entity/js/select2entity.js') }}"></script>
    <script src="{{ asset('js/base.js') }}"></script>
    {{ parent() }}
{% endblock foot_script %}
